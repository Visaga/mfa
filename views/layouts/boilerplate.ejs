	<!-- Seo -->
	<% if (seoTags){ %>
	<meta property="og:title" content=" <%= title %> "/>
	
	<% if (seoTags.description){ %>
	<meta name="description" content="<%= seoTags.description %>"/>
	<meta property="og:description" content="<%= seoTags.description %>"/>
	<%}%>
	
	<% if (seoTags.keywords){ %>
    <meta name="keywords" content="<%= seoTags.keywords %>"/>
	<%}%>
	
	<% if (seoTags.image){ %>
	<meta property="vk:image" content="<%= seoTags.image %>">
	<meta property="og:image" content=" <%= seoTags.image %>"/>
	<meta property="og:image:width" content="400" />
	<%}%>
	
	
	<meta name="robots" content="<%= seoTags.robots %>">
	
       <% if (seoTags.canonical){ %>
	<link rel="canonical" href="<%= seoTags.url %>">
	 <% } %>
	
	<% if (seoTags.type){ %>
	<meta property="og:type" content="<%= seoTags.type %>"/>
	<%}%>
	<meta property="og:site_name" content="BuduZnat.ru"/>
	
	<% if (seoTags.url){ %>
	<meta property="og:url" content="<%= seoTags.url%>"/>
	<%}%>
	
	
	<% if (seoTags.published){ %>
	<meta property="article:published_time" content="<%= seoTags.published.toISOString() %>">
	<%}%>
	<% if (seoTags.modified){ %>
	<meta property="article:modified_time" content="<%= seoTags.modified.toISOString() %>">
	<%}%>
	
	
	
	
	<%} else {%>
	     <meta name="robots" content="noindex, nofollow">
	<% } %>
	
	
	
