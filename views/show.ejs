<% layout("/layouts/boilerplate") %>





<div class="row pt-3">
	<div class="fixed-top d-none d-xxl-flex flex-column justify-content-center align-items-center" style="width: 100px; height: 100%; z-index: 0;">
		<!-- uSocial -->
<!-- <script async src="https://usocial.pro/usocial/usocial.js?uid=0d29ac316bf58479&v=6.1.5" data-script="usocial" charset="utf-8"></script>
<div class="uSocial-Share" data-lang="en" data-pid="12c917de4e0f1ddbd200197eb0613643" data-type="share" data-options="round-rect,style1,default,left,bg,slide-down,size48,eachCounter0,counter1,counter-after,upArrow-left" data-social="vk,telegram,fb,vi,wa"></div> -->
<!-- /uSocial -->
	</div>
	
<!-- 	
	////// -->
	
	
	<div class="col-xl-8 col-lg-12"  id="main-content">
		 <% if (foundPage.published == false) { %>
		     <div class="alert alert-danger" role="alert">
  NOT PUBLISHED YET!
</div>
		<% } %>
		
		 <h1 id="title" class="text-start"> <%- foundPage.title %> </h1>
		
		<div  class="d-flex flex-wrap">
			<time class="text-muted mr-3 d-block " datetime="<%= foundPage.createdDate %>"> Опубликовано: <%= foundPage.createdDate.toLocaleString() %></time>
		<% if (foundPage.modifiedDate){ %>
		<time class="text-muted mr-3 d-block" datetime="<%= foundPage.modifiedDate %>"> Изменено: <%= foundPage.modifiedDate.toLocaleString() %></time>
	        <%}%>
		</div>
			
		
	<div class=" mb-5">
		<% foundPage.content.forEach(abstract => { %>
		     <% if ( abstract.subtitle.length){ %>
		     <h2 class="mt-5" style="font-size: 1.5rem"> <%- abstract.subtitle %></h2>
		     <% } %>
		
		<% if ( abstract.text.length){ %>
			<p class="text-left mb-3"><%- abstract.text %></p>
		<% } %>
		
		
		    <div>
				
				<% if ( abstract.img){ %>
				<img class="img-fluid mb-2 img-thumbnail shadow-sm" src="<%= abstract.img %>"  alt="<%= abstract.alt %>">
				<% } else{ %> 
				
				<% } %>
		</div>
		
		<% }) %>
		
		<div class="container-fluid  d-flex flex-column">
					<div class="container-fluid bg-light  p-1">
						<span class="p-2">Похожие статьи</span>
					</div>
					<ul id="similar-articles">
						
					</ul>
				</div>
			
				</div>
		
		
		
		
		<div class="d-flex justify-content-between flex-wrap p-3 bg-light">
			<author class="text-muted"> © <%= foundPage.author.username%></author>
			<category class="text-muted" > category / <span id="category"><%= foundPage.category %></span></category>
			
			<div clas="container-fluid d-flex ">
			<span class=" d-block text-muted mr-3"> &#128065; <%= foundPage.views.all%> / <%= foundPage.views.unic%></span>
				
		</div>
		
		<% if (currentUser){ %>
	 <a href="/articleS/<%= foundPage._id%>/edit" class="btn btn-primary">Edit</a>
		<% } %>
		
	</div>
	</div>
	
	
	
	<!-- //Separator -->
	
	<div class="col-xl-1" ></div>
	
	
	
	<!-- =======================  RIGHT BAR ASIDE ============================ -->
	<div class="col-xl-3 d-none d-xl-flex flex-column position-relative " id="rightBar">
	<div id="rightBarBlocks" class=""></div>

	<div id="rightBar-stickyBlock" class="mt-5"></div>
	</div>
	<!-- ------------------------------------------------------------------------->
	
	
	
	
	<!-- ============LOADING ON SCROLL PARRENT======================================= -->
	<div>
		<div class="row row-cols-1 row-cols-md-2 g-4 mt-5" id="lazyLoadingBlock"></div>
	</div>
	<!-- ---------------------------------------------------------------------------- -->
	
	
</div>
		
	

<script  src="/javaScripts/getAndRender.js"></script>
