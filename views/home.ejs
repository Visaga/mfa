	<div class=" d-flex justify-content-between flex-wrap">	
		
		
		
	
			
		<%if (allBlogs.length < 1){%>
		
		<div class=" container-fluid alert alert-danger alert-dismissible fade show" role="alert">
			
			<%if (currentUrl != "/articles/unpublished") {%>
			   Пo запросу <strong>"<%= query %>"</strong> ничего не найдено..
			<% } else {%>
			Все статьи опубликованы. Здесь ничего нет..
			<%}%>
		     
		<button type="button" class="btn-close" data-dismiss="alert" aria-label="Close"></button>
</div>
		<%}%>
			<% allBlogs.forEach(blog =>{ %>
		<!-- ======card/////////////////// -->
<a href="/articles/<%= blog.urlExtention.replace(/ /g, "-")%>/<%= blog._id%>" class="text-decoration-none text-dark">
				<div class="card mb-3 shadow">
						<div class="row">
								<div class="col-md-6 col-lg-4 d-block">
									<img src="<%= blog.content[0].img.replace("/upload", "/upload/w_600") %>" class="img-fluid " alt="<%= blog.content[0].alt %>">
								</div>

								<div class="col-md-6 col-lg-8 d-block">
									<div class="card-body">
										<h5 class="card-title"><%- blog.title %></h5>
										
										<% if(blog.content[0].text.length > 0){ %>
										<p class="card-text"><%- blog.content[0].text.slice(0,90) + "..." %></p>
										<%} else if(blog.content[1] && blog.content[1].text.length > 0) {%>
									    <p class="card-text"><%- blog.content[1].text.slice(0,90) + "..." %></p>
										<%} else{%>
										<p>
											 "no text"
										</p>
										<%}%>
										<p class="card-text">	
										 <small class="text-muted"><%= blog.createdDate.toLocaleString() %></small>
									
											<button  class="btn btn-primary float-right btn-sm">Продолжение..</button>
										</p>
										<div>
											<span class="text-muted">&#128065; <%=blog.views.all%></span>
										</div>

										 <div class="d-flex justify-content-between">
										  <form action="/articles/<%= blog._id %>/?_method=DELETE" method="POST">
											  <% if (currentUser){ %>
											  <input type="submit" class="btn btn-danger btn-sm" value="DELETE">
											  <% } %>
										  </form>
										  </div>

									</div>
						      </div>
						</div>
				</div>
		</a>
<% }) %>
		
		
